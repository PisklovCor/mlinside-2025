<?xml version="1.0"?>

<!DOCTYPE suppressions PUBLIC
        "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
        "https://checkstyle.org/dtds/suppressions_1_2.dtd">

<suppressions>
    <!-- Подавление для сгенерированного кода -->
    <suppress checks=".*" files=".*[\\/]generated[\\/].*"/>
    <suppress checks=".*" files=".*[\\/]target[\\/].*"/>
    
    <!-- Подавление для тестовых файлов -->
    <suppress checks="MissingJavadocType" files=".*Test\.java"/>
    <suppress checks="MissingJavadocMethod" files=".*Test\.java"/>
    <suppress checks="JavadocMethod" files=".*Test\.java"/>
    
    <!-- Подавление для главного класса Spring Boot приложения -->
    <suppress checks="MissingJavadocType" files=".*Application\.java"/>
    
    <!-- Подавление для классов конфигурации -->
    <suppress checks="MissingJavadocMethod" files=".*Config\.java"/>
    
    <!-- Подавление для DTO и сущностей с Lombok -->
    <suppress checks="MissingJavadocMethod" files=".*[\\/]dto[\\/].*\.java"/>
    <suppress checks="MissingJavadocMethod" files=".*[\\/]model[\\/].*\.java"/>
    
    <!-- Подавление для очень коротких утилитарных методов -->
    <suppress checks="MissingJavadocMethod" files=".*" lines="1-5"/>
</suppressions> 